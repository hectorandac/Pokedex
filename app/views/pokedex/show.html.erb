
<!-- Renders the pokemon view in a card element -->
<% @pokemons.each do |pokemon| %>
  <div class="card pokement_card">
    <img class="card-img-top" src="<%= pokemon.sprite %>" alt="Pokemon image">
    <h4 align="center"><%= pokemon.name %></h4>
    <h5>Stats:</h5>
    <h6>Weight: <%= pokemon.weight %></h6>
    <% pokemon.stats.each do |stat| %>
      <h6 class="weak_title"><%= stat.name %></h6>
      <div style="margin-bottom: 4px" class="progress">
        <div class="progress-bar bg-success" role="progressbar" style="width: <%= stat.base_stat / 1.4 %>%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    <% end %>
    <h5 style="margin-top: 10px;">Abilities: </h5>
    <% pokemon.abilities.each do |ability| %>
      <button style="margin: 7px;" type="button" class="btn btn-outline-primary"><%= ability.name %></button>
    <% end %>
  </div>
<% end %>